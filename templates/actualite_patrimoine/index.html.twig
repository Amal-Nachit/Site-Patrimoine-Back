{% extends 'base.html.twig' %}

{% block title %}Actualité Patrimoine Index{% endblock %}

{% block body %}
<div class="container mx-auto p-6 bg-blue-200">

<div class=" pt-6 pb-80 bg-blue-200 ">
    <a href="{{ path('app_user_index') }}" class="ml-6 bg-blue-600 hover:bg-blue-800 text-white font-semibold py-2 px-4 rounded">Liste des administrateurs</a>
<div class="max-w-7xl mx-auto py-8 sm:px-6 lg:px-8">

    <h1 class="text-center text-4xl font-extrabold mb-10 text-gray-900">Actualités autour du patrimoine</h1>

    <div class="flex justify-center mb-10">
        <a href="{{ path('app_actualite_patrimoine_new') }}" class="inline-block bg-blue-600 hover:bg-blue-800 text-white font-semibold py-3 px-6 rounded-lg shadow-lg transition duration-300 ease-in-out transform hover:-translate-y-1">
            <svg class="inline-block w-5 h-5 mr-2 -mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
            Créer une nouvelle actualité
        </a>
    </div>
    
    <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <div class="p-6 text-center bg-white border-b border-gray-200">
        <table class="w-full table-auto">
            <thead>
                <tr class="bg-gray-100">
                    <th class="py-3 px-6 text-center text-sm font-semibold text-gray-700 uppercase tracking-wider">Id</th>
                    <th class="py-3 px-6 text-center text-sm font-semibold text-gray-700 uppercase tracking-wider">Titre de l'actualité</th>
                    <th class="py-3 px-6 text-center text-sm font-semibold text-gray-700 uppercase tracking-wider">Date de publication</th>
                    <th class="py-3 px-6 text-center text-sm font-semibold text-gray-700 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for actualite_patrimoine in actualite_patrimoines %}
                    <tr class="hover:bg-gray-50 transition duration-150">
                        <td class="py-4 px-6 text-center">{{ actualite_patrimoine.id }}</td>
                        <td class="py-4 px-6 text-center"><a href="{{ path('app_actualite_patrimoine_show', {'id': actualite_patrimoine.id}) }}" class="text-blue-600 hover:text-blue-900 underline">{{ actualite_patrimoine.titreActualite }}</a></td>
                        <td class="py-4 px-6 text-center">{{ actualite_patrimoine.datePublication ? actualite_patrimoine.datePublication|date('d/m/Y') : '' }}</td>
                        <td class="text-center">
                            <a href="{{ path('app_actualite_patrimoine_show', {'id': actualite_patrimoine.id}) }}" class="text-blue-600 hover:text-blue-900 mr-2"><i class="fas fa-eye"></i>
                                Voir
                            </a>
                            <a href="{{ path('app_actualite_patrimoine_edit', {'id': actualite_patrimoine.id}) }}" class="text-yellow-500 hover:text-yellow-700 mr-2"><i class="fas fa-edit"></i>
                                Éditer
                            </a>
                        </td>
                {% else %}
                    <tr>
                        <td colspan="4" class="py-4 px-6 text-center text-sm font-medium text-gray-600">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    </div>
    </div>
</div>
{% endblock %}
